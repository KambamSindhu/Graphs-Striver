// User function Template for Java

class Solution {
    public int[] bellmanFord(int V, int[][] edges, int src) {
        
        int dis[]=new int[V];
        Arrays.fill(dis,(int)1e8);
        dis[src]=0;
        for(int x=0;x<V;x++)
        {
            for(int i=0;i<edges.length;i++)
            {
               int u=edges[i][0];
               int v=edges[i][1];
               int wt=edges[i][2];
               
              if(dis[u]!=1e8 && dis[u]+wt<dis[v])
              {
                  dis[v]=dis[u]+wt;
              }
                
            }
        }
          for(int i=0;i<edges.length;i++)
            {
               int u=edges[i][0];
               int v=edges[i][1];
               int wt=edges[i][2];
               
             if(dis[u]!=1e8 && dis[u]+wt<dis[v])
              {
                  int temp[]=new int[1];
                  temp[0]=-1;
                  return temp;
              }
                
            }
        return dis;
    }
}
